<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
               android:id="@+id/spmaingridview" 
               android:layout_width="fill_parent" 
               android:layout_height="fill_parent"
               android:orientation="vertical"
               android:layout_weight="1"
               >
               
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal"
                  android:gravity="center_horizontal">
                  <View android:layout_width="fill_parent" 
                        android:layout_height="25px" 
                  />
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal" 
                  android:gravity="center_horizontal">
                <ImageView android:id="@+id/tripsbtn"
                       android:layout_width="48dp"
                       android:layout_height="48dp" 
                       android:src="@drawable/trip128"
                       android:clickable="true" 
                       android:layout_gravity="center_horizontal"
                       android:layout_weight="1" 
                       android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal"
                  android:gravity="center_horizontal">
                <TextView android:id="@+id/tripslbl" 
                          android:text="@string/trips"
                          android:layout_height="fill_parent" 
                          android:textAppearance="@style/MainTextAppearance"
                          android:layout_gravity="center|center_horizontal"
                          android:layout_width="fill_parent" 
                />
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal"
                  android:gravity="center_horizontal">
                  <View android:layout_width="fill_parent" 
                        android:layout_height="25px" 
                  />
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal" 
                  android:gravity="center_horizontal">
                <ImageView android:id="@+id/collectingbtn"
                       android:layout_width="48dp"
                       android:layout_height="48dp" 
                       android:src="@drawable/collect128"
                       android:clickable="true" 
                       android:layout_gravity="center_horizontal"
                       android:layout_weight="1" 
                       android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal"
                  android:gravity="center_horizontal">
                <TextView android:id="@+id/collectinglbl" 
                          android:text="@string/collecting"
                          android:layout_height="fill_parent" 
                          android:textAppearance="@style/MainTextAppearance"
                          android:layout_gravity="center|center_horizontal"
                          android:layout_width="fill_parent" 
                />
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal"
                  android:gravity="center_horizontal">
                  <View android:layout_width="fill_parent" 
                        android:layout_height="25px" 
                  />
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal" 
                  android:gravity="center_horizontal">
                <ImageView android:id="@+id/observationsbtn"
                       android:layout_width="48dp"
                       android:layout_height="48dp" 
                       android:src="@drawable/look128"
                       android:clickable="true" 
                       android:layout_gravity="center_horizontal"
                       android:layout_weight="1" 
                       android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal"
                  android:gravity="center_horizontal">
                <TextView android:id="@+id/observationslbl" 
                          android:text="@string/observations"
                          android:layout_height="fill_parent" 
                          android:textAppearance="@style/MainTextAppearance"
                          android:layout_gravity="center|center_horizontal"
                          android:layout_width="fill_parent" 
                />
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal"
                  android:gravity="center_horizontal">
                  <View android:layout_width="fill_parent" 
                        android:layout_height="25px" 
                  />
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal" 
                  android:gravity="center_horizontal">
                <ImageView android:id="@+id/satellitebtn"
                       android:layout_width="48dp"
                       android:layout_height="48dp" 
                       android:src="@drawable/satellite128"
                       android:clickable="true" 
                       android:layout_gravity="center_horizontal"
                       android:layout_weight="1" 
                       android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" 
                  android:layout_gravity="center|center_horizontal"
                  android:gravity="center_horizontal">
                <TextView android:id="@+id/satellitelbl" 
                          android:text="@string/satellites"
                          android:layout_height="fill_parent" 
                          android:textAppearance="@style/MainTextAppearance"
                          android:layout_gravity="center|center_horizontal"
                          android:layout_width="fill_parent" 
                />
        </TableRow>
            
    </TableLayout>
</LinearLayout>