<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:paddingLeft="5dip"
	    android:paddingRight="5dip"
	    android:gravity="center_vertical"
	    android:background="@drawable/trip_banner"
    >
    <TextView android:id="@+id/apptitle" 
              android:text="@string/app_name"
              android:layout_height="fill_parent" 
              android:layout_width="wrap_content" 
              android:textAppearance="@style/TitleTextAppearance"
              android:gravity="center_vertical"
              android:singleLine="true"
              android:layout_alignParentLeft="true"
    />
    <TextView android:id="@+id/headersep" 
              android:text=" - "
              android:layout_height="fill_parent" 
              android:layout_width="wrap_content" 
              android:textAppearance="@style/TitleTextAppearance"
              android:gravity="center_vertical"
              android:singleLine="true"
              android:layout_toRightOf="@+id/apptitle"
    />
    <TextView android:id="@+id/headertitle" 
              android:text=" "
              android:layout_height="fill_parent" 
              android:layout_width="wrap_content" 
              android:textAppearance="@style/TitleTextAppearance"
              android:gravity="center_vertical"
              android:ellipsize="end"
              android:layout_toRightOf="@+id/headersep"
              android:layout_toLeftOf="@+id/headerimg"
    />
    <ImageView
        android:id="@+id/headerimg"
        android:src="@drawable/appicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_vertical|right"
        android:layout_alignParentRight="true"
        android:gravity="right"
    />
</RelativeLayout>
